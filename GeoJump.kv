#:import random random
#: import CardTransition kivy.uix.screenmanager.CardTransition

<GameScreen>:
    canvas:
        Color:
            rgba: 0.6, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        GameView
            id: game
        Button:
            size_hint: None, None
            pos: self.parent.width - self.width, self.parent.height - self.height
            text: 'Pause'
            on_press: game.pause_game() if game.game_has_started else game.start_game()
            on_release: self.text = 'Pause' if game.game_has_started else 'Resume'
        Label:
            size_hint: None, None
            font_size: 50
            pos: self.parent.width/2 - self.width/3, self.parent.height - self.height
            text: str(game.score)

<MenuScreen>:
    canvas:
        Color:
            rgba: 0, 0.6, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint: None, None
        size: 600, 300
        orientation: 'vertical'
        center: root.center
        Label:
            text: 'GeoJumper'
            font_size: 100
            font_name:'Roboto-BoldItalic'
            text_size: self.size
            color: 'cyan'
            halign: 'center'
            valign: 'center'

        AnchorLayout:
            Button:
                text: 'START JUMPING'
                size_hint: None, None
                font_size: 30
                size: self.texture_size
                padding: 20, 20
                on_release: root.manager.current = 'game'
        AnchorLayout:
            Button:
                text: 'Quit'
                size_hint: None, None
                font_size: 30
                size: self.texture_size
                padding: 20, 20
                on_release: exit()

<GameOverScreen>:
    canvas:
        Color:
            rgba: 0, 0.6, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size_hint: None, None
        size: 600, 300
        orientation: 'vertical'
        center: root.center
        Label:
            font_size: 40
            size: 266, 100
            color: 'red'
            text: 'YOUR JUMPING DAYS ARE NUMBERED'
            font_name:'Roboto-BoldItalic'
            text_size: self.size
            halign: 'center'
            valign: 'center'
        AnchorLayout:
            Button:
                size_hint: None, None
                text: 'RESTART'
                font_size: 30
                padding: 20, 20
                size: self.texture_size
                on_release:
                    root.manager.transition = CardTransition()
                    root.manager.current = 'game'
        AnchorLayout:
            Button:
                size_hint: None, None
                center: self.parent.center
                font_size: 30
                padding: 20, 20
                size: self.texture_size
                text: 'Quit'
                on_release: exit()

